{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "Meteor": "readonly",
    "Accounts": "readonly",
    "Assets": "readonly",
    "it": "readonly",
    "describe": "readonly",
    "beforeEach": "readonly",
    "afterEach": "readonly"
  },
  "rules": {
    "import/no-unresolved": [2, { "ignore": ["^meteor/"] }]
  }
}
